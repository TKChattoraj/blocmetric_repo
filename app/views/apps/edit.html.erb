<h3>Edit App</h1>


<div class="row">
  <%= form_for [@app.user, @app] do |a| %>
    <% if @app.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@app.errors.count, "error") %>.</h4>
        <ul>
          <% @app.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_group_tag(@app.errors[:url]) do %>
      <div class="col-xs-8">
        <%= a.text_field :name, class: 'form-control' %>
        <%= a.text_field :url, class: 'form-control'%>
      </div.
    <% end %>

    <div class="form-group">
      <%= a.submit "Save", class:'btn btn-success' %>
    </div>

  <% end %>


</div>
