<div class="container-fluid">
<h1 class="text-center">Application:  <%= @app.url %></h1>
<div class='row'>

    <div class='col-xs-4'>
      <%= link_to "Edit Application", edit_user_app_path(@app.user, @app), class: 'btn-xs btn-success' %>
    </div>


    <div class='col-xs-4'>
      <%= link_to "Delete Bookmark", [@app.user, @app], method: :delete, class: 'btn-xs btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
    </div>

    <div class='col-xs-4'>
      <%= link_to "My Apps", user_apps_path(@app.user), class: 'btn-xs btn-primary' %>

</div>
</div>
