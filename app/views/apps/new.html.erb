<h2>Make a New App</h2>

<div class="row">
  <div class="col-md-4">

  </div>
  <div class="col-xs-8">
    <%= form_for [@user, @app] do |a| %>
    <div class="form-group">

      <%= a.text_field :name, class: 'form-control', placeholder: "Enter Name of App" %>
      <%= a.text_field :url, class: 'form-control', placeholder: "http://enter_application_like_this.com" %>

    </div>
    <%= a.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
